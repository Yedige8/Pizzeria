<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <filter>
    <filter-name>charsetFilter</filter-name>
    <filter-class>yeddy.pizzeria.servlet.filter.CharsetFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>charsetFilter</filter-name>
    <url-pattern>/main/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>redirectFilter</filter-name>
    <filter-class>yeddy.pizzeria.servlet.filter.RedirectFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>redirectFilter</filter-name>
    <url-pattern>/main</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>localeFilter</filter-name>
    <filter-class>yeddy.pizzeria.servlet.filter.LocaleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>localeFilter</filter-name>
    <url-pattern>/main/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>publicAuthFilter</filter-name>
    <filter-class>yeddy.pizzeria.servlet.filter.PublicAuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>publicAuthFilter</filter-name>
    <url-pattern>/main/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>adminAuthFilter</filter-name>
    <filter-class>yeddy.pizzeria.servlet.filter.AdminAuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>adminAuthFilter</filter-name>
    <url-pattern>/main/admin/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>mainServlet</servlet-name>
    <servlet-class>yeddy.pizzeria.servlet.MainServlet</servlet-class>
    <multipart-config/>
  </servlet>
  <servlet-mapping>
    <servlet-name>mainServlet</servlet-name>
    <url-pattern>/main/*</url-pattern>
  </servlet-mapping>
</web-app>
